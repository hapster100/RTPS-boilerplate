.app
  font-family monospace
  display flex
  flex-direction column
  height max-content
  align-items center
  justify-content center
  
  &-list
    marker none
    font-size 50px
    margin 0
    &-item
      cursor pointer
      padding-right 20px
      &:hover
        transition all 0.5s
        padding-left 20px 
        padding-right 0
        color: #0a0aaa
  &-title
    font-size 100px
    margin-bottom 10px